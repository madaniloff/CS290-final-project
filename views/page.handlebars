<div class = border>
    <div class = "title-content">
        <h1>{{pageData.title}}</h1>
    </div>

    <div class = "horizontal-box">
        <div id = "left-column">
            {{#each pageData.content}}
                <div class = "content">
                    <h2>{{this.heading}}</h2>
                    <p>{{this.paragraphs}}</p>
                </div>
            {{/each}}
        </div>
        <div id = "right-column">
            <div class = "content">
                <img class = "post-image" src = {{pageData.imageURL}}>
                {{#if typelocation}}
                    {{> location stats}}
                {{/if}}
            </div>
        </div>
    </div>
</div>